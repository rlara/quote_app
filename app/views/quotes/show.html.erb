<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @quote.name %>
</p>

<p>
  <b>Description:</b>
  <%= @quote.description %>
</p>

<p>
  <b>Costperhour:</b>
  <%= costo = @quote.costperhour %>
</p>
<p>
  <b>Total hr code:</b>
  <%= code= @quote.cases.sum (:code)%>
</p>
<p>
  <b>Total hr design:</b>
  <%= design = @quote.cases.sum(:design)%>
</p>
<p>
  <b>Total: $ <%= total = (design + code) * costo %></b>
</p>

<%= link_to 'Edit', edit_quote_path(@quote), :class => "btn btn-primary" %> |
<%= link_to 'Back', quotes_path, :class => "btn btn-primary" %>

<h2>Cases</h2>
<%= render :partial => "cases/c", :collection => @quote.cases %>
  <% if found = @quote.cases.empty?%>
  <em>Without Cases</em>
 <%end%>
   

<div id="myModal" class="modal hide fade">
           <div class="modal-header">
             <a class="close" data-dismiss="modal" >&times;</a>
             <h3>Modal Heading</h3>
           </div>

        <div class="span6">
          <%= form_for([@quote, @quote.cases.build]) do |f| %>
          <div class="field">
            <%= f.label :name %>
            <%= f.text_field :name %>
          </div>
          <div class="field">
            <%= f.label :description %>
            <%= f.text_area :description %>
          </div>
          <div class="field">
            <%= f.radio_button :tipe, true %>
            <%= f.label :tipe, 'Feature', :value => 'true' %>
            <%= f.radio_button :tipe, false %>
            <%= f.label :tipe, 'Case', :value => 'false' %>

          </div>
          <div class="field">
            <%= f.label :code %>
            <%= f.text_field :code %>
          </div>
          <div class="field">
            <%= f.label :design %>
            <%= f.text_field :design %>
          </div>
          <div class="field">
            <%= f.label :base %>
            <%= f.check_box :base %>
          </div>
          <div class="actions">
            <%= f.submit :class => "btn btn-primary" %>
          </div>
          <% end %>
      </div>
</div>

<br/>

<a data-toggle="modal" href="#myModal" class="btn btn-success">New Case</a>





