<h1>Listing quotes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Costperhour</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @quotes.each do |quote| %>
  <tr>
    <td><%= quote.name %></td>
    <td><%= quote.description %></td>
    <td><%= quote.costperhour %></td>
    <td><%= link_to 'Show', quote %></td>
    <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
    <td><%= link_to 'Destroy', quote, :class => "btn btn-danger", confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Quote', new_quote_path, :class => "btn btn-primary" %>
