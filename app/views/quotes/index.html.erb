<h1>Listing quotes</h1>

<table class="table table-striped table-condensed">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Costperhour</th>
    <th></th>
    <th></th>
  </tr>

<% @quotes.each do |quote| %>
  <tr>
    <td><%= link_to quote.name, quote, :class => "label"%></td>
    <td><%= truncate(quote.description, :omission => "...(continued)") %></td>
    <td><%= quote.costperhour %></td>
    <td><%= link_to 'Edit', edit_quote_path(quote), :class => "btn btn-primary" %></td>
    <td><%= link_to 'Destroy', quote, :class => "btn btn-danger", confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

