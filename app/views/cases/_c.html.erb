<table class="table table-striped table-condensed">
  <thead>  
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Tipo</th>
      <th>Days Development</th>
      <th>Days Design</th>
      <th>Base</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><font face="Arial Black" size="3" color="#006631"><%= c.name %></font></td>
      <td> <%= c.description %></td>
      <td><font face="Arial Black" size="3" color="#006631"><%= c.tipe %></font></td>
      <td><font face="Arial Black" size="3" color="#006631"><%= c.code %></font></td>
      <td><font face="Arial Black" size="3" color="#006631"><%= c.design %></font></td>
      <td><% if c.base == true %>
            <%= c.base = 'Si es'%>
          <% else %>
            <%= c.base = 'No es'%>
          <% end %></td>
    </tr>
  </tbody>

</table>

<%= link_to 'Destroy', [c.quote, c], :class => "btn btn-danger", :confirm => 'Are you sure?', :method => :delete  %>
<%= link_to 'Edit', edit_quote_case_path(c.quote, c), :class => "btn btn-info", :remote => true  %>

