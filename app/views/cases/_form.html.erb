<%= form_for([@case.quote, @case]) do |f| %>

  <% if @case.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@case.errors.count, "error") %> prohibited this comment from being saved:</h2>
      <ul>
      <% @case.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.radio_button :tipe, true %>
    <%= f.label :tipe, 'Feature', :value => 'true' %>
    <%= f.radio_button :tipe, false %>
    <%= f.label :tipe, 'Chore', :value => 'false' %>
  </div>
  <div class="field">
    <%= f.label :code %><br />
    <%= f.text_field :code %>
  </div>
  <div class="field">
    <%= f.label :design %><br />
    <%= f.text_field :design %>
  </div>
  <div class="field">
    <%= f.label :base %><br />
    <%= f.check_box :base %>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn btn-success"%>
  </div>
<% end %>

